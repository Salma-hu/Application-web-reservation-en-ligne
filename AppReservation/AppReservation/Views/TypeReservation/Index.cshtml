@model IEnumerable<AppReservation.Models.TypeReservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p class="text-right">
    <a class="btn btn-primary" asp-action="Create"><i class='bx bx-message-square-add'></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessNumber)
            </td>
            <td>
                <a class="btn btn-success rounded-circle" asp-action="Edit" asp-route-id="@item.Id"><i class='bx bxs-pencil'></i></a> |
                <a class="btn btn-danger rounded-circle" asp-action="Delete" asp-route-id="@item.Id"><i class='bx bx-trash'></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
